{
  "info": {
    "name": "survey-api",
    "_postman_id": "8f2f0c1e-0000-4a2a-bbbb-000000surveyapi",
    "description": "Survey Feedback API â€” Auth, Surveys, Submissions, plus Elasticsearch bonus integration.\nLogin saves JWT to {{access_token}}; ES index bootstrap and search included.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      { "key": "token", "value": "{{access_token}}", "type": "string" }
    ]
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/register",
              "host": ["{{base_url}}"],
              "path": ["api", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"evina@example.com\",\n  \"password\": \"StrongPass123!\"\n}"
            },
            "description": "Create a responder and return a JWT."
          }
        },
        {
          "name": "Login (stores token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200', function(){ pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "const token = json?.data?.token || json?.token;",
                  "pm.expect(token, 'token should exist').to.be.a('string');",
                  "pm.environment.set('access_token', token);",
                  "console.log('JWT saved to environment as access_token');"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/login",
              "host": ["{{base_url}}"],
              "path": ["api", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"evina@example.com\",\n  \"password\": \"StrongPass123!\"\n}"
            },
            "description": "Login and store JWT as {{access_token}}."
          }
        },
        {
          "name": "Me (protected)",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{access_token}}", "type": "string" }] },
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/me",
              "host": ["{{base_url}}"],
              "path": ["api", "me"]
            },
            "description": "Returns current responder. Requires Bearer {{access_token}}."
          }
        }
      ]
    },
    {
      "name": "Surveys (public)",
      "item": [
        {
          "name": "List Active Surveys",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/surveys",
              "host": ["{{base_url}}"],
              "path": ["api", "surveys"]
            }
          }
        },
        {
          "name": "Get Survey Details (with Questions)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/surveys/1",
              "host": ["{{base_url}}"],
              "path": ["api", "surveys", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Submissions (protected)",
      "item": [
        {
          "name": "Submit Survey Answers (survey 1)",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{access_token}}", "type": "string" }] },
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/surveys/1/submit",
              "host": ["{{base_url}}"],
              "path": ["api", "surveys", "1", "submit"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"responses\": [\n    { \"question_id\": 1, \"value\": 5 },\n    { \"question_id\": 2, \"value\": \"Great product!\" },\n    { \"question_id\": 3, \"value\": \"Yes\" }\n  ]\n}"
            },
            "description": "Submit answers for survey #1. Requires Bearer {{access_token}}."
          }
        }
      ]
    },
    {
      "name": "Elasticsearch (bonus)",
      "item": [
        {
          "name": "Create index (one-time, safe mapping)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{es_host}}/{{es_index}}",
              "host": ["{{es_host}}"],
              "path": ["{{es_index}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mappings\": {\n    \"properties\": {\n      \"survey_id\":    { \"type\": \"integer\" },\n      \"responder_id\": { \"type\": \"integer\" },\n      \"submitted_at\": { \"type\": \"date\" },\n      \"ip\":           { \"type\": \"ip\" },\n      \"user_agent\":   { \"type\": \"keyword\" },\n      \"answers\": {\n        \"type\": \"nested\",\n        \"properties\": {\n          \"question_id\":  { \"type\": \"integer\" },\n          \"responder_id\": { \"type\": \"integer\" },\n          \"response_data\": { \"enabled\": false }\n        }\n      }\n    }\n  }\n}"
            },
            "description": "Bootstraps the index with a mapping that stores response_data without analyzing it (prevents mixed-type errors)."
          }
        },
        {
          "name": "Search submissions by survey_id = 1",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{es_host}}/{{es_index}}/_search",
              "host": ["{{es_host}}"],
              "path": ["{{es_index}}", "_search"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": { \"term\": { \"survey_id\": 1 } }\n}"
            },
            "description": "Verifies that survey submissions are indexed."
          }
        }
      ],
      "description": "Bonus: ES logging. Use Create index once, then submit answers, then run the search."
    }
  ],
  "event": [],
  "variable": []
}
